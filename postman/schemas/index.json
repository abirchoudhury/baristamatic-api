{
    "openapi": "3.0.1",
    "info": {
        "title": "BaristamaticAPI",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://localhost:7109",
            "description": "Development server"
        }        
    ],
    "paths": {
        "/api/AvailableDrinks": {
            "get": {
                "tags": [
                    "AvailableDrinks"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/BaristamaticMenu/GetDrinksMenu": {
            "get": {
                "tags": [
                    "BaristamaticMenu"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/BaristamaticDrink"
                                    }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/BaristamaticDrink"
                                    }
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/BaristamaticDrink"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/DrinksOrder/GetAllOrders": {
            "get": {
                "tags": [
                    "DrinksOrder"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OrderResponseModel"
                                    }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OrderResponseModel"
                                    }
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OrderResponseModel"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/DrinksOrder/PlaceDrinksOrder": {
            "post": {
                "tags": [
                    "DrinksOrder"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/OrderRequestModel"
                            }
                        },
                        "text/json": {
                            "schema": {
                                "$ref": "#/components/schemas/OrderRequestModel"
                            }
                        },
                        "application/*+json": {
                            "schema": {
                                "$ref": "#/components/schemas/OrderRequestModel"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/OrderResponseModel"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/OrderResponseModel"
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/OrderResponseModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Ingredients/GetCurrentStock": {
            "get": {
                "tags": [
                    "Ingredients"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Ingredient"
                                    }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Ingredient"
                                    }
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Ingredient"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Ingredients/RestoreIngredients": {
            "post": {
                "tags": [
                    "Ingredients"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "BaristamaticDrink": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "drinkName": {
                        "type": "string",
                        "nullable": true
                    },
                    "ingredients": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "additionalProperties": false
            },
            "DrinkNames": {
                "enum": [
                    "Coffee",
                    "DecafCoffee",
                    "CaffeLatte",
                    "CaffeAmericano",
                    "CaffeMocha",
                    "Cappuccino"
                ],
                "type": "string"
            },
            "Ingredient": {
                "type": "object",
                "properties": {
                    "ingredientID": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "ingredientName": {
                        "type": "string",
                        "nullable": true
                    },
                    "unitCost": {
                        "type": "number",
                        "format": "double"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    }
                },
                "additionalProperties": false
            },
            "OrderRequestModel": {
                "type": "object",
                "properties": {
                    "drinkName": {
                        "$ref": "#/components/schemas/DrinkNames"
                    },
                    "decaf": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "additionalProperties": false
            },
            "OrderResponseModel": {
                "type": "object",
                "properties": {
                    "drinkName": {
                        "type": "string",
                        "nullable": true
                    },
                    "decaf": {
                        "type": "boolean"
                    },
                    "orderTotal": {
                        "type": "number",
                        "format": "double"
                    },
                    "orderDateFormatted": {
                        "type": "string",
                        "nullable": true
                    },
                    "totalCostFormatted": {
                        "type": "string",
                        "nullable": true
                    },
                    "utcOrderDate": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "additionalProperties": false
            }
        }
    }
}